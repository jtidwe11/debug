{
	"compilerOptions": {
		"sourceMap": true,
		"noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "strict": true
	},
	"include": [
    "src/**/*.ts",
    "src/**/*.vue"
	],
  "exclude": [
    "node_modules"
  ]
}